<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyStuff_Sergio.Views.EditarItemCategoryPage"
             Title="Edite o elimine La Categoría">
    <ContentPage.Content>
        <StackLayout Padding="10,50,20,10">


            <Entry x:Name="TxtItemCategoryId" Text="{Binding ItemCategoryId}" IsVisible="False" />

            <Entry x:Name="TxtCategory" Text="{Binding Category}"/>

            <Entry x:Name="TxtUserId" Text="{Binding UserId}" IsVisible="False" />


            <Button Text="Guardar" x:Name="BtnGuardarItemCategory" Clicked="BtnGuardarItemCategory_Clicked" BackgroundColor="Indigo" HeightRequest="50" WidthRequest="150" 
                        HorizontalOptions="Center"  CornerRadius="5"  Margin="0,0,0,0"/>

            <Button Text="Eliminar" x:Name="BtnEliminarItemCategory" Clicked="BtnEliminarItemCategory_Clicked" BackgroundColor="Red" HeightRequest="50" WidthRequest="150" 
                        HorizontalOptions="Center"  CornerRadius="5"  Margin="0,0,0,0"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>