<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyStuff_Sergio.Views.EditarBrandPage">
    <ContentPage.Content>
        <StackLayout Padding="10,50,20,10">


            <!-- nombre
            descripcion
            costo
            numserial -->

            <Entry x:Name="TxtBrandId" Text="{Binding BrandId}" IsVisible="False" />

            <Entry x:Name="TxtBrandName" Text="{Binding BrandName}"/>

            <Entry x:Name="TxtUserId" Text="{Binding UserId}" IsVisible="False" />


            <Button Text="Guardar" x:Name="BtnGuardar" Clicked="BtnGuardar_Clicked" BackgroundColor="Indigo" HeightRequest="50" WidthRequest="150" 
                        HorizontalOptions="Center"  CornerRadius="5"  Margin="0,0,0,0"/>

            <Button Text="Eliminar" x:Name="BtnEliminar" Clicked="BtnEliminar_Clicked" BackgroundColor="Red" HeightRequest="50" WidthRequest="150" 
                        HorizontalOptions="Center"  CornerRadius="5"  Margin="0,0,0,0"/>






        </StackLayout>
    </ContentPage.Content>
</ContentPage>