<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyStuff_Sergio.Views.SelectorAccionPage">
    <ContentPage.Content>


        <Grid>
            <Label Text="Seleccione la acción deseada"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />

            <FlexLayout x:Name="FlAcciones" Wrap="Wrap" JustifyContent="SpaceEvenly" Direction="Row" Padding="0,0,0,0" AlignContent="Center">

                <Button Text="Agregar Items" x:Name="BtnAgregar" BackgroundColor="Aqua" HeightRequest="100" WidthRequest="100" 
                        HorizontalOptions="Center" Clicked="BtnAgregar_Clicked"/>

            </FlexLayout>
            
            
        </Grid>


        
    </ContentPage.Content>
</ContentPage>